{
  "openapi": "3.1.0",
  "info": {
    "title": "Kea Social Media Agency Tools",
    "description": "AI-powered content creation tools with brand archetype support",
    "version": "v1.0.0"
  },
  "servers": [
    {
      "url": "https://kea-backend.railway.app"
    }
  ],
  "paths": {
    "/CommandProcessor": {
      "post": {
        "description": "Process content creation commands like /create-content-post",
        "operationId": "CommandProcessor",
        "x-openai-isConsequential": false,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "command": {
                    "type": "string",
                    "description": "The command to execute (e.g., /create-content-post)",
                    "example": "/create-content-post"
                  },
                  "topic": {
                    "type": "string",
                    "description": "The topic or subject for the content",
                    "example": "Digital banking solutions for small businesses"
                  },
                  "platform": {
                    "type": "string",
                    "enum": ["twitter", "linkedin", "facebook", "instagram"],
                    "description": "Target social media platform",
                    "default": "linkedin"
                  },
                  "tone": {
                    "type": "string",
                    "enum": ["professional", "casual", "playful", "educational"],
                    "description": "Desired tone of the content",
                    "default": "professional"
                  },
                  "keywords": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Keywords to include in the content",
                    "example": ["fintech", "innovation", "banking"]
                  },
                  "call_to_action": {
                    "type": "string",
                    "description": "Call-to-action to include at the end",
                    "example": "Learn more about our solutions"
                  },
                  "include_hashtags": {
                    "type": "boolean",
                    "description": "Whether to generate and include hashtags",
                    "default": true
                  }
                },
                "required": ["command", "topic"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Command processed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "task_id": {
                      "type": "string",
                      "description": "Notion task ID for tracking"
                    },
                    "status": {
                      "type": "string",
                      "description": "Execution status"
                    },
                    "message": {
                      "type": "string",
                      "description": "Status message"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/NotionTaskManager": {
      "post": {
        "description": "Create or update tasks in Notion database",
        "operationId": "NotionTaskManager",
        "x-openai-isConsequential": false,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "action": {
                    "type": "string",
                    "enum": ["create", "update", "get_status"],
                    "description": "Action to perform",
                    "default": "create"
                  },
                  "task_id": {
                    "type": "string",
                    "description": "Task ID (required for update/get_status)"
                  },
                  "title": {
                    "type": "string",
                    "description": "Task title (for create)"
                  },
                  "status": {
                    "type": "string",
                    "enum": ["Waiting", "In Progress", "In Review", "Published", "Rejected", "Error"],
                    "description": "Task status"
                  },
                  "agent_status": {
                    "type": "string",
                    "enum": ["Waiting", "Research Agent", "Copywriter Agent", "Complete"],
                    "description": "Current agent processing"
                  },
                  "research_data": {
                    "type": "string",
                    "description": "Research findings to add"
                  },
                  "final_text": {
                    "type": "string",
                    "description": "Generated content"
                  },
                  "archetype_used": {
                    "type": "string",
                    "enum": ["Caregiver", "Explorer", "Regular Guy"],
                    "description": "Brand archetype used"
                  }
                },
                "required": ["action"]
              }
            }
          }
        }
      }
    },
    "/ResearchAgentProxy": {
      "post": {
        "description": "Perform web research with brand archetype perspective",
        "operationId": "ResearchAgentProxy",
        "x-openai-isConsequential": false,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "task_id": {
                    "type": "string",
                    "description": "Notion task ID"
                  },
                  "topic": {
                    "type": "string",
                    "description": "Topic to research"
                  },
                  "depth": {
                    "type": "string",
                    "enum": ["quick", "standard", "deep"],
                    "description": "Research depth level",
                    "default": "standard"
                  },
                  "focus_areas": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Specific areas to focus on",
                    "example": ["benefits", "features", "trends"]
                  }
                },
                "required": ["task_id", "topic"]
              }
            }
          }
        }
      }
    },
    "/CopywriterAgentProxy": {
      "post": {
        "description": "Generate content with brand voice and platform optimization",
        "operationId": "CopywriterAgentProxy",
        "x-openai-isConsequential": false,
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "task_id": {
                    "type": "string",
                    "description": "Notion task ID"
                  },
                  "topic": {
                    "type": "string",
                    "description": "Content topic"
                  },
                  "platform": {
                    "type": "string",
                    "enum": ["twitter", "linkedin", "facebook", "instagram"],
                    "description": "Target platform"
                  },
                  "tone": {
                    "type": "string",
                    "enum": ["professional", "casual", "playful", "educational"],
                    "description": "Content tone"
                  },
                  "research_data": {
                    "type": "object",
                    "description": "Research data from Research Agent"
                  },
                  "keywords": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "Keywords to include"
                  },
                  "call_to_action": {
                    "type": "string",
                    "description": "Call-to-action text"
                  }
                },
                "required": ["task_id", "topic", "platform", "tone"]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskResult": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean",
            "description": "Whether the task succeeded"
          },
          "task_id": {
            "type": "string",
            "description": "Notion task ID"
          },
          "content": {
            "type": "string",
            "description": "Generated content if successful"
          },
          "hashtags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Generated hashtags"
          },
          "archetype_used": {
            "type": "string",
            "enum": ["Caregiver", "Explorer", "Regular Guy"],
            "description": "Which brand archetype was used"
          },
          "error": {
            "type": "string",
            "description": "Error message if failed"
          }
        }
      }
    },
    "securitySchemes": {
      "apiKey": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header"
      }
    }
  },
  "security": [
    {
      "apiKey": []
    }
  ]
}